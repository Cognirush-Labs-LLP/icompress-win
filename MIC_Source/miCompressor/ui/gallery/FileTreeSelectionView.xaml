<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="miCompressor.ui.FileTreeSelectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:miCompressor.ui"
    xmlns:vm="using:miCompressor.ui.viewmodel"
    xmlns:core="using:miCompressor.core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TreeView ItemsSource="{x:Bind ViewModel.ImageTree, Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  ScrollViewer.HorizontalScrollMode="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollMode="Disabled"
                  >
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="Padding" Value="0,0,0,0"/>
                    <!-- Reduce spacing -->
                    <Setter Property="Margin" Value="-4"/>
                    <!-- No extra margin -->
                    <!--<Setter Property="Height" Value="34"/>-->
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ItemTemplate>
                <DataTemplate x:DataType="vm:ImageTreeNode">
                    <TreeViewItem ItemsSource="{x:Bind Children}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                            <!-- Checkbox for selecting files/folders -->
                            <Border>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <CheckBox IsThreeState="True" IsChecked="{x:Bind SelectionState, Mode=OneWay}" Click="OnCheckBoxClicked" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" Margin="0,2,0,0">
                                        <Grid Visibility="{x:Bind IsFolder, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <FontIcon Glyph="&#xED44;" Visibility="{x:Bind IsFolder, Converter={StaticResource BoolToVisibilityConverter}}" Foreground="#FFDE48" Margin="0,0,6,0" />
                                            <FontIcon Glyph="&#xED43;"  Foreground="Black" Opacity="0.3" Margin="0,0,6,0" />
                                        </Grid>
                                        <TextBlock Text="{x:Bind ShortName}" VerticalAlignment="Center" Opacity="0.5" TextWrapping="Wrap" Visibility="{x:Bind IsFolder, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        <TextBlock Text="{x:Bind ShortName}" VerticalAlignment="Center" Visibility="{x:Bind IsImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </CheckBox>
                            </Border>

                            <TextBlock Text="{x:Bind ImageFileCount}" VerticalAlignment="Center" Style="{StaticResource TextBlockSmall}" Margin="10,0,10,0" Foreground="{StaticResource Acccent_70}" Visibility="{x:Bind IsFolder, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <!-- Folder or File Name -->
                            <TextBlock Text="{x:Bind Dimensions, Mode=OneWay}" VerticalAlignment="Center" Style="{StaticResource TextBlockSmall}" Margin="10,0,10,0" Foreground="{StaticResource Acccent_70}" />
                            <TextBlock Text="{x:Bind FileSize, Mode=OneWay}" VerticalAlignment="Center" Style="{StaticResource TextBlockSmall}" Foreground="{StaticResource Acccent_70}"/>

                            <!-- "Preview" Link (Only for Files) -->
                            <HyperlinkButton Content="Preview" NavigateUri="{x:Bind FileInfo.FileToCompress.FullName}" FontSize="12" Padding="4"
                                     Margin="20,0,0,0" Visibility="{x:Bind IsImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
