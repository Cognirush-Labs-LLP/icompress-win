<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:miCompressor.ui">

    <!-- Small Sizes -->
    <x:Double x:Key="TextXSmall">10</x:Double>
    <x:Double x:Key="TextSmall">12</x:Double>

    <!-- Medium Sizes -->
    <x:Double x:Key="TextMedium">14</x:Double>

    <!-- Large Sizes -->
    <x:Double x:Key="TextLarge">18</x:Double>
    <x:Double x:Key="TextXLarge">24</x:Double>

    <!-- Headings -->
    <x:Double x:Key="TextH1">32</x:Double>
    <x:Double x:Key="TextH2">28</x:Double>
    <x:Double x:Key="TextH3">24</x:Double>

    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

    <!-- Styles -->
    <Style x:Key="TextBlockXSmall" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TextXSmall}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}"/>
    </Style>

    <Style x:Key="TextBlockSmall" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TextSmall}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}"/>
    </Style>

    <Style x:Key="TextBlockMedium" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TextMedium}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}"/>
    </Style>

    <Style x:Key="TextBlockLarge" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TextLarge}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}"/>
    </Style>

    <Style x:Key="TextBlockH1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TextH1}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
    </Style>

    <Style x:Key="TextBlockH2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TextH2}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}"/>
    </Style>

    <Style x:Key="TextBlockH3" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TextH3}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}"/>
    </Style>
    
</ResourceDictionary>
